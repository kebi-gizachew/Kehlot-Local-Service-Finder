// ===============================
// Prisma Client Generator
// ===============================
generator client {
  provider = "prisma-client-js"
   url      = env("DATABASE_URL")

}

// ===============================
// Database Connection
// ===============================
datasource db {
  provider = "postgresql"
}

// ===============================
// ENUMS (User Roles)
// ===============================
enum Role {
  ADMIN
  PROVIDER
  USER
}

// ===============================
// USER MODEL (AUTHENTICATION CORE)
// ===============================
model User {
  id                 Int      @id @default(autoincrement())
  fullName           String
  email              String   @unique
  password           String
  role               Role
  mustChangePassword Boolean  @default(false)
  createdAt          DateTime @default(now())

  // Relations
  providerProfile ServiceProvider?
 // reviewsGiven     Review[]        @relation("UserReviews")
  //messagesSent     Message[]       @relation("SentMessages")
  //messagesReceived Message[]       @relation("ReceivedMessages")
}

// ===============================
// SERVICE PROVIDER PROFILE
// ===============================
enum ServiceType {
  ELECTRICIAN
  MECHANIC
  CLEANER
  PAINTING_CONTRACTOR
  CARPENTER
  PLUMBER
}

model ServiceProvider {
  id              Int         @id @default(autoincrement())
  userId          Int         @unique
  user            User        @relation(fields: [userId], references: [id])

  serviceType     ServiceType
  location        String
  phone           String
  bio             String
  profileImage    String?

  // Admin-only verification data (NOT exposed)
  faydaId         String
  verificationDoc String

  createdAt       DateTime    @default(now())

  // Relations
  //reviewsReceived Review[]
}

